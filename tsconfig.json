{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ]
}
